#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty
#urxvtc

# program launcher
# make sure to install the rofi calc plugin: svenstaro/rofi-calc (use this line before that's installed:)
#rofi -modi "drun" -sidebar-mode -show drun
super + space
	rofi -modi "drun,calc" -sidebar-mode -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# temporary keybind for testing things
# popup a calendar with dunst
super + s
	notify-send "$(cal|sed "s|\($(date +%d)\)|<span foreground='#ffffff'>\1</span>|")"

#
# function keys
#

#acpilight: xbacklight requires sudo!
XF86MonBrightnessDown
	sudo xbacklight -dec 10

XF86MonBrightnessUp
	sudo xbacklight -inc 10

# for mac laptop keeb
XF86LaunchA
	/opt/bin/lock

# for full keebs
XF86HomePage
	/opt/bin/lock

#XF86LaunchB

shift + XF86LaunchB
	scrot -e 'mv $f ~/images' && notify-send "Screenshot taken"

XF86KbdBrightnessDown
	~/.bin/kb_light -d

XF86KbdBrightnessUp
	~/.bin/kb_light -i

#XF86AudioPrev
#XF86AudioPlay
#XF86AudioNext

XF86AudioRaiseVolume
	amixer set 'Master' 5%+

XF86AudioLowerVolume
	amixer set 'Master' 5%-

XF86AudioMute
	amixer -D pulse set 'Master' 1+ toggle

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t,g,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# focus the next/previous node in the current desktop
alt + {_,shift + }n
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor (mouse)
shift + {button8,button9}
	bspc desktop -f {prev,next}.local

# focus the next/previous desktop in the current monitor (keyboard)
super + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# swap windows
ctrl + alt + {h,j,k,l}
	bspc node -s {west,south,north,east}

# reinsert windows (odd that this is so complicated)
# (note) there's no way to have 1-to-many braces assignment (?) ^
super + shift + h
	bspc node west -p south && bspc node focused -n west
super + shift + j
	bspc node south -p east && bspc node focused -n south
super + shift + k
	bspc node north -p east && bspc node focused -n north
super + shift + l
	bspc node east -p south && bspc node focused -n east

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
alt + shift + {l,k,j,h}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}
