# Configuration for Alacritty, the GPU enhanced terminal emulator.

# do i need this?
#env:
  # TERM variable
  #
  # This value is used to set the `$TERM` environment variable for
  # each instance of Alacritty. If it is not present, alacritty will
  # check the local terminfo database and use `alacritty` if it is
  # available, otherwise `xterm-256color` is used.
  #TERM: xterm-256color

env:
  TERM: xterm-256color

window:
  padding:
    x: 30
    y: 20

  # Spread additional padding evenly around the terminal content.
  dynamic_padding: false

  # Window decorations
  decorations: none

  opacity: 0.8

scrolling:
  history: 500

  # Number of lines the viewport will move for every line scrolled
  multiplier: 3

# using patched nerd font (for vscode icons) from
# https://github.com/ryanoasis/nerd-fonts/tree/master/patched-fonts/FantasqueSansMono/Regular/complete
font:
  # normal (can also specify bold and italic)
  normal:
    # family: Fantasque Sans Mono Nerd
    family: FantasqueSansMono Nerd Font Mono
    # family: Iosevka

  # Point size
  {{ if (eq .chezmoi.os "darwin") -}}
  size: 14.0
  {{ else -}}
  size: 8.0
  {{- end }}

  # Thin stroke font rendering (retina displays, macOS only)
  use_thin_strokes: true

# If `true`, bold text is drawn using the bright color variants.
draw_bold_text_with_bright_colors: true

colors:
  cursor:
    # Keep cursor white to prevent missing it over parens
    cursor: '0xebdbb2'

{{ if (eq .chezmoi.os "darwin") -}}
# https://github.com/dylanaraps/pywal/pull/611
import:
  - ~/.cache/wal/colors-alacritty.yml
{{- end }}

# Mouse stuff
mouse_bindings:
  - { mouse: Right, action: PasteSelection }

hints:
  enabled:
    - regex: "(mailto:|gemini:|gopher:|https:|http:|news:|file:|git:|ssh:|ftp:)[^\u0000-\u001F\u007F-\u009F<>\" {-}\\^⟨⟩`]+"
      {{ if (eq .chezmoi.os "darwin") -}}
      command: open
      {{ else -}}
      command: xdg-open
      {{- end -}}
      post_processing: true
      mouse:
        enabled: true
        {{ if (eq .chezmoi.os "darwin") -}}
        mods: Command
        {{- else -}}
        mods: Super
        {{- end }}

selection:
  semantic_escape_chars: ",│`|:\"' ()[]{}<>"

  # When set to `true`, selected text will be copied to the primary clipboard.
  save_to_clipboard: true

# Live config reload (changes require restart)
live_config_reload: true

# Send ESC (\x1b) before characters when alt is pressed.
alt_send_esc: true

key_bindings:
  # (Windows/Linux only)
  - { key: V,        mods: Control|Shift, action: Paste            }
  - { key: C,        mods: Control|Shift, action: Copy             }
  - { key: Insert,   mods: Shift,         action: PasteSelection   }
  - { key: Key0,     mods: Control,       action: ResetFontSize    }
