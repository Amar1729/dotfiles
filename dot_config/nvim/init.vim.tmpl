" Amar Paul's init.vim (for Neovim)
let g:vim_home = expand('~/.config/nvim/config.vim/')

let config_list = [
    \ 'plugins.vim',
    \ 'settings.vim',
    \ 'keybinds.vim',
    \ 'autocmds.vim',
    \ 'plugin_settings/*.vim',
    \ ]

for files in config_list
    for f in glob(g:vim_home . files, 1, 1)
        exec 'source' f
    endfor
endfor
